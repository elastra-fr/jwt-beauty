{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="mt-5 mb-4 text-center">Réinitialisation du mot de passe</h1>
                <form method="post">
                    {{ form_start(form, {'attr': {'class': 'form'}}) }}
                        <div class="mb-3">
                            {{ form_row(form.newPassword, {'attr': {'class': 'form-control', 'placeholder': 'Nouveau mot de passe'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.confirmPassword, {'attr': {'class': 'form-control', 'placeholder': 'Confirmer le nouveau mot de passe'}}) }}
                        </div>
                        <button type="submit" class="btn btn-primary">Réinitialiser le mot de passe</button>
                    {{ form_end(form) }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}
